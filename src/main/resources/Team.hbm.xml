<?xml version = "1.0" ?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="vClass.Team" table="TEAM">
		<id name="id" type="java.lang.Integer">
			<column name="T_ID" />
			<generator class="identity" />
		</id>
		<bag name="players" cascade="All">
			<key column="T_ID"></key>
			<one-to-many class="vClass.Player" />
		</bag>
		<bag name="actualFormation" cascade="All">
			<key column="T_ID"></key>
			<one-to-many class="vClass.Player" />
		</bag>
		 <bag name="players" cascade="All">
                 <key column="T_ID" ></key>
                 <one-to-many class="vClass.Player"/>
               </bag>
          <map table="FORMATIONS" name="formations">
          	<key column="T_ID"></key>
          	<map-key column="TYPEPOSITION" type="java.lang.String"></map-key>
          	<element type="java.lang.Integer">
          		<column name="QUANTITY"></column>
          	</element>
          </map>
               

	</class>
</hibernate-mapping>